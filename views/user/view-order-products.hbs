<style>
  .gradient-custom {
    /* fallback for old browsers */
    background: #cd9cf2;

    /* Chrome 10-25, Safari 5.1-6 */
    background: -webkit-linear-gradient(to top left, rgba(143, 132, 233, 1), rgba(246, 243, 255, 1));

    /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    background: linear-gradient(to top left, rgba(150, 140, 241, 1), rgba(246, 243, 255, 1))
  }
</style>



<section class="h-250 gradient-custom">
  <div class="container py-5 h-250">
    <div class="row d-flex justify-content-center align-items-center h-250">
      <div class="col-lg-10 col-xl-8">
        <div class="card" style="border-radius:10px; ">
          <div class="card-header px-4 py-5">
            <h5 class="text-muted mb-0">Thanks for your Order, <span
                style="color: #386af5;">{{order.deliveryDetails.fname}}</span>!</h5>
          </div>
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0" style="color: #5976c7;">Receipt</p>
              <span>
                <p class="small text-muted mb-0">State : {{order.deliveryDetails.state}}</p>
                <p class="small text-muted mb-0">Name : {{order.deliveryDetails.fname}}</p>
                <p class="small text-muted mb-0">Phone : {{order.deliveryDetails.phone}}</p>

              </span>

            </div>

            {{#each products}}
            <div class="card shadow-0 border mb-4">
              <div class="card-body">
                <a href="/product-detailes/{{product._id}}">
                  <div class="row">
                    <div class="col-md-2">
                      <img src="/product-image/front_{{product._id}}.jpg" class="img-fluid" alt="Phone">
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0">{{product.name}}</p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">{{product.color}}</p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">Capacity: {{product.ram}}</p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">Qty: {{this.quantity}}</p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">{{this.totel}}</p>
                    </div>
                  </div>
              </div>
              </a>
            </div>

            {{/each}}

            <div class="row d-flex align-items-center">
              
              <div class="col-md-2">
                <p class="text-muted mb-0 small">Track Order</p>
              </div>
              <div class="col-md-10">
                <div class="progress" style="height: 6px; border-radius: 16px;">
                  <div class="progress-bar" role="progressbar" {{#if
                    status.Pending}}style="width: 25%; border-radius: 16px; background-color: #5976c7;" {{/if}} {{#if
                    status.ReadyToShipp}}style="width: 50%; border-radius: 16px; background-color: #5976c7;" {{/if}}
                    {{#if status.Shipped}}style="width: 75%; border-radius: 16px; background-color: #5976c7;" {{/if}}
                    {{#if status.Delivered}}style="width: 100%; border-radius: 16px; background-color: #5976c7;" {{/if}}
                    aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <div class="d-flex justify-content-around mb-1">
                  <p class="text-muted mb-0 small">Pending</p>
                  <p class="text-muted mt-1 mb-0 small ms-xl-5">Ready To Shipp</p>
                  <p class="text-muted mt-1 mb-0 small ms-xl-5">Shipped</p>

                  <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p>
                </div>
              </div>


            </div>


            <div class="d-flex justify-content-between pt-2">
              <p class="fw-bold mb-0">Order Details</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">Total</span>{{order.totelAmound}}</p>
            </div>

            <div class="d-flex justify-content-between pt-2">
              <p class="text-muted mb-0">Invoice ID : {{order._id}}</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">GST 18%</span>{{order.gst}}</p>
            </div>

            <div class="d-flex justify-content-between">
              <p class="text-muted mb-0">Invoice Date : {{order.date}}</p>
              <p class="text-muted mb-0"><span class="fw-bold me-4">Discount</span>{{order.discound}}</p>

            </div>
            <div class="d-flex justify-content-between">
              <p class="text-muted mb-0">Invoice Time : {{order.time}}</p>

              <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery Charges</span> Free</p>
            </div>
            {{#if status.Pending}}
                <div class="alert alert-warning text-center" role="alert">
                <b> Waiting For Payment !</b>
              </div>
            <div class="d-flex justify-content-between mt-3">

              <button onclick="payment('{{order._id}}','{{order.totel}}')" class="btn btn-outline-primary">Make Payment
                Now</button>
              <a href="/cancel-order/{{order._id}}" onclick="return confirm('Are you want to Clear Your Cart?')"
                class="btn btn-outline-danger">Cancel Order</a>
              <p class="text-muted mb-0"><span class="fw-bold me-4"></span></p>
            </div>
            {{/if}}


          </div>
          <div class="card-footer border-0 px-4 py-5"
            style="background-color: #5976c7; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
            <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
              paid: <span class="h2 mb-0 ms-2">{{order.totel}}</span></h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>


<script>
  function payment(id, amount) {
    console.log("button cliked")
    amount = parseInt(amount)
    $.ajax({
      url: '/make-payment-now',

      data: {
        orderId: id,
        totel: amount,
      },
      method: 'post',
      success: function (data) {
        razorpayPayment(data)
      }
    })
  }
  function razorpayPayment(order) {

    var options = {
      "key": "rzp_test_jUspqW6Y2QXpgt", // Enter the Key ID generated from the Dashboard
      "amount": order.amount, // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
      "currency": "INR",
      "name": "Mobiles",
      "description": "Test Transaction",
      "image": "https://example.com/your_logo",
      "order_id": order.id, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
      "handler": function (response) {

        varifyPayment(response, order)
      },
      "prefill": {
        "name": "Gaurav Kumar",
        "email": "gaurav.kumar@example.com",
        "contact": "9999999999"
      },
      "notes": {
        "address": "Razorpay Corporate Office"
      },
      "theme": {
        "color": "#3399cc"
      }
    };
    var rzp1 = new Razorpay(options);
    rzp1.open();

  }
  function varifyPayment(payment, order) {
    $.ajax({
      url: '/verify-payment',
      method: 'post',
      data: {
        payment,
        order
      },
      success: (response) => {
        if (response.status) {
          alert("Success")
        } else {
          alert("Payment Filed")
        }
      }
    })
  }

  function cancelOrder(orderId) {

    $.ajax({
      url: '/cancel-order',
      method: 'post',
      data: {
        orderId: orderId
      },
      success: () => {
        alert("Order Cancelled")
        location.href = '/orders'
      }
    })
  }



</script>