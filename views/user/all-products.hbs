<section class="product_section layout_padding">


  <div class="container">

    <div class="heading_container heading_center">
      <h2>Our Products</h2>
    </div>

    <div class="row">
      {{#each products}}
      <div class="col-sm-6 col-lg-4">
        <div class="box">
          <div class="img-box">
            <img src="/product-image/front_{{this._id}}.jpg" alt="" />
            <a href="/product-detailes/{{this._id}}" class="add_cart_btn">
              <span> View Product </span>
            </a>
          </div>
          <div class="detail-box">
            <h5>{{this.name}}</h5>
            <div class="product_info">
              <h5><span>â‚¹</span> {{this.price}}</h5>
              <div class="star_container">
               <!-- <i class="fa fa-star" aria-hidden="true"></i>
                <i class="fa fa-star" aria-hidden="true"></i>
                <i class="fa fa-star" aria-hidden="true"></i>
                <i class="fa fa-star" aria-hidden="true"></i>
                <i class="fa fa-star" aria-hidden="true"></i>-->
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}


    </div>

  </div>
</section>

<script>
  function Choise(brand){
    $.ajax({
      url:'/customer-choise',
      method:'post',
      data:{
        brand:brand
      },
      success:()=>{
        location.reload()
      }
    })
  }
</script>